{
  "name": "Python 3.12 + uv + Jupyter + Claude Code",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  "remoteEnv": {
    "UV_LINK_MODE": "copy"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-kernelspec",
        "anthropic.claude-code"
      ],
      "settings": {
        "python.analysis.typeCheckingMode": "basic",
        "jupyter.notebookLanguage": "python",
        "jupyter.pythonPath": "${workspaceFolder}/.venv/bin/python",
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
      }
    }
  },

  "postCreateCommand": "pip install uv && uv sync && uv pip install ipykernel --python .venv/bin/python"
}
